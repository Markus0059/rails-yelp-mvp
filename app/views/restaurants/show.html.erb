<h1>Details of <%= @restaurant.name %></h1>
<ul>
<li>Name: <%= @restaurant.name %></li>
<li>Adress: <%= @restaurant.address %></li>
<li>Phone Number: <%= @restaurant.phone_number  %></li>
<li>Category: <%= @restaurant.category  %></li>
<% @restaurant.reviews.each do |review| %>
    <p>Content: </p>
    <li class="list-group-item"><%= review.content %></li>
    <li>Rating :<%= review.rating %></li>
  <% end %>
</ul>

<p><%= link_to "all restaurants" , restaurants_path %></p>
<p><%= link_to "Edit" , edit_restaurant_path(@restaurant) %></p>
<p><%= link_to "Delete #{@restaurant.name}", restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?" } %></p>
<p><%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %></p>
